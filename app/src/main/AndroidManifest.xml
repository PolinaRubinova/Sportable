<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.polytech.sportable">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sportable">
        <service
            android:name=".services.PracticeService"
            android:enabled="true"
            android:exported="true">

        </service>

        <activity android:name=".activities.MapActivity"/>
        <activity
            android:name=".activities.freerun.FreeRunStatActivity"
            android:theme="@style/Theme.Sportable.NoActionBar"
            />
        <activity
            android:name=".activities.freerun.FreeRunActivity"
            android:theme="@style/Theme.Sportable.NoActionBar"
            />
        <activity
            android:name=".activities.statistics.StatActivity"
            android:label="@string/title_activity_stat"
            android:theme="@style/Theme.Sportable.NoActionBar" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.settings.ChangeProfile" >
        <intent-filter>

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>


    </application>

</manifest>