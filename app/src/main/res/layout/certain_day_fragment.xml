<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/certain_day_text_kind_of_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_kind_of_workout"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/certain_day_kind_of_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/certain_day_text_all_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_total_calories"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/certain_day_all_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
         <TextView
             android:id="@+id/certain_day_text_distance"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/text_distance"
             android:textSize="24sp" />

        <TextView
            android:id="@+id/certain_day_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/certain_day_text_average_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_average_speed"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/certain_day_average_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/certain_day_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_of_workout"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/certain_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </TableRow>
</TableLayout>