<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitites.freerun.FreeRunActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="417dp"
        android:layout_height="669dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="46dp"
                android:fontFamily="casual"
                android:scaleX="1"
                android:scaleY="1"
                android:text="time"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textKilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="46dp"
                android:fontFamily="casual"
                android:scaleX="1"
                android:scaleY="1"
                android:text="distance"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="46dp"
                android:fontFamily="casual"
                android:scaleX="1"
                android:scaleY="1"
                android:text="caloriesValue"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="46dp"
                android:fontFamily="casual"
                android:scaleX="1"
                android:scaleY="1"
                android:text="speed"
                android:textSize="28sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="200dp"
                    android:background="#4CAF50"
                    android:text="pause"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_media_pause"
                    app:iconTint="#FF9800"
                    app:layout_constraintTop_toBottomOf="@+id/textTime"
                    app:rippleColor="#4CAF50" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valueTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/valueDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/valueCalories"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="50dp"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/valueSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:textSize="28sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonStop"
                    android:layout_width="126dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="230dp"
                    android:text="stop"
                    app:icon="@android:drawable/checkbox_off_background"
                    app:iconTint="#F44336"
                    app:rippleColor="#4CAF50" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>