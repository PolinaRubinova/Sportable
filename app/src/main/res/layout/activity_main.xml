<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/settings_button"
        style="@style/Text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_settings_1"
        android:onClick="onMyButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stats_button"
        style="@style/Text"
        android:layout_width="256dp"
        android:layout_height="71dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="412dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_statistics"
        android:onClick="onMyButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/freerun_button"
        style="@style/Text"
        android:layout_width="355dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="108dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_freerun_button"
        android:onClick="onMyButtonClick"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/map_button"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        android:background="@color/blue"

        android:onClick="onMyButtonClick"
        android:text="@string/map_button_text"
        app:layout_constraintBottom_toTopOf="@+id/freerun_button"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/activityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RadioButton
            android:id="@+id/radioBicycle"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bicycle" />

        <RadioButton
            android:id="@+id/radioRun"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/run" />

        <RadioButton
            android:id="@+id/radioWalk"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/walk" />
    </RadioGroup>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button" />

    <TextView
        android:id="@+id/typeOf"
        style="@style/Bigger"
        android:layout_width="212dp"
        android:layout_height="34dp"
        android:text="Тип тренировки"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="116dp" />

    <Button
        android:id="@+id/runningMan"
        style="@style/Text"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="164dp"

        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_running"
        android:onClick="onMyButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cyclingMan"
        style="@style/Text"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="176dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_cycling"
        android:onClick="onMyButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>