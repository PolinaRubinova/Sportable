<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/background">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/certain_day_kind_of_workout"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_with_colour"
            android:gravity="center|end"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="24sp"
            tools:text="Бег" />

        <TextView
            style="@style/Text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_without_colour"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Тренировка"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/certain_day_all_calories"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_with_colour"
            android:gravity="center|end"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="24sp"
            tools:text="0 кал." />

        <TextView
            style="@style/Text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_without_colour"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Калории"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/certain_day_distance"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_with_colour"
            android:gravity="center|end"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="24sp"
            tools:text="0 км. 0 м." />

        <TextView
            style="@style/Text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_without_colour"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Дистанция"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/certain_day_time"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_with_colour"
            android:gravity="center|end"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="24sp"
            tools:text="00:00:00" />

        <TextView
            style="@style/Text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/rectangle_without_colour"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Время"
            android:textSize="24sp" />
    </FrameLayout>
</LinearLayout>