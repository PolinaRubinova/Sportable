<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/changeProfile_button"
            android:layout_width="300dp"
            android:layout_height="134dp"
            android:text="@string/changeProfile"
            android:backgroundTint="#FF0202"
            android:translationX="55dp"
            android:translationY="100dp"
            android:onClick="changeProfile"/>

        <Button
            android:id="@+id/clearStat_button"
            android:layout_width="300dp"
            android:layout_height="134dp"
            android:backgroundTint="#FF0202"
            android:onClick="clearStatistics"
            android:text="@string/clearStatistics"
            android:translationX="55dp"
            android:translationY="300dp" />
    </FrameLayout>

</LinearLayout>