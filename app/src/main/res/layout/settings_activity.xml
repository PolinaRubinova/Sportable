<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.settings.SettingsActivity">

        <Button
            android:id="@+id/changeProfile_button"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#FF018786"
            android:onClick="changeProfile"
            android:text="@string/changeProfile"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/clearStat_button"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="230dp"
            android:backgroundTint="#FF018786"
            android:textColor="#000000"
            android:text="@string/clearStatistics"
            android:onClick="clearStatistics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/End_button"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="#F16D26"
            android:onClick="saveAndQuit"
            android:text="@string/saveAndQuit"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>