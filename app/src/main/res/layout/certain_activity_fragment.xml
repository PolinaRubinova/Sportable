                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/certain_activity_biggest_time"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_rectangle_with_colour"
                    android:gravity="center|end"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="24sp"
                    tools:text="0000:00:00" />

                <TextView
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_rectangle_without_colour"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/maximum"
                    android:textSize="24sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/certain_activity_smallest_time"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_rectangle_with_colour"
                    android:gravity="center|end"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="24sp"
                    tools:text="0000:00:00" />

                <TextView
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_rectangle_without_colour"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/minimum"
                    android:textSize="24sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>