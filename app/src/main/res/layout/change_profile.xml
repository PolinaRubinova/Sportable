<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/change_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/name_button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#FF0202"
            android:onClick="changeProfile"
            android:text="@string/changeName"
            android:translationX="55dp"
            android:translationY="20dp" />

        <Button
            android:id="@+id/body_button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#FF0202"
            android:onClick="changeBody"
            android:text="@string/changeBody"
            android:translationX="55dp"
            android:translationY="150dp" />

        <Button
            android:id="@+id/age_button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#FF0202"
            android:onClick="changeAge"
            android:text="@string/changeAge"
            android:translationX="55dp"
            android:translationY="280dp" />

        <Button
            android:id="@+id/kill_button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:backgroundTint="#FF0202"
            android:onClick="saveAndQuit"
            android:text="@string/end"
            android:translationX="55dp"
            android:translationY="410dp" />
    </FrameLayout>

</LinearLayout>