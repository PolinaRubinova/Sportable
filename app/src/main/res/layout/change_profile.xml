<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.settings.ChangeProfile">

    <Button
        android:id="@+id/name_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF018786"
        android:textColor="#000000"
        android:text="@string/changeName"
        android:onClick="changeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sex_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#FF018786"
        android:textColor="#000000"
        android:text="@string/changeSex"
        android:onClick="changeSex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/height_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="230dp"
        android:backgroundTint="#FF018786"
        android:textColor="#000000"
        android:text="@string/changeHeight"
        android:onClick="changeHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weight_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="330dp"
        android:backgroundTint="#FF018786"
        android:onClick="changeWeight"
        android:text="@string/changeWeight"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/age_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#FF018786"
        android:onClick="changeAge"
        android:text="@string/changeAge"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kill_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="530dp"
        android:backgroundTint="#F16D26"
        android:onClick="saveAndQuit"
        android:text="@string/end"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>